# fastlane/Fastfile
default_platform :ios
setup_travis

platform :ios do
  before_all do
    cocoapods(repo_update: true)
  end

  desc "Runs all the tests"
  lane :test do
    scan(scheme: "mapswipe",
         configuration: "Debug",
         clean: true,
         derived_data_path: "build",
         build_for_testing: true,
         devices:['iPhone X'])
    scan(scheme: "mapswipe",
         configuration: "Debug",
         test_without_building: true,
         derived_data_path: "build",
         devices:['iPhone X'])   
  end
end